<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="finalproject" transaction-type="RESOURCE_LOCAL">
		<class>com.fdmgroup.entities.Item</class>
		<class>com.fdmgroup.entities.Order</class>
		<class>com.fdmgroup.entities.OrderDetails</class>
		<class>com.fdmgroup.entities.Payment</class>
		<class>com.fdmgroup.entities.SiteUser</class>
		<properties>
			<property name="javax.persistence.jdbc.url" value="jdbc:h2:~/connectionName"/>
			<property name="javax.persistence.jdbc.user" value="sa"/>
			<property name="javax.persistence.jdbc.password" value=""/>
			<property name="javax.persistence.jdbc.driver" value="org.h2.Driver"/>
		</properties>
	</persistence-unit>
</persistence>
